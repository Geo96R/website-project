apiVersion: v1
kind: Secret
metadata:
  name: argocd-basic-auth
  namespace: argocd
type: Opaque
stringData:
  auth: "admin:$apr1$REPLACE_THIS_WITH_YOUR_HASH"
# To generate the hash:
# 1. Install htpasswd: apt-get install apache2-utils (or brew install httpd on mac)
# 2. Run: htpasswd -nb admin YourPasswordHere
# 3. Copy the output and replace the stringData.auth value above
# 4. Save as basic-auth-secret.yaml (remove .example)
# 5. kubectl apply -f k8s/argocd/basic-auth-secret.yaml
# DO NOT commit the real secret to git, keep it local only

